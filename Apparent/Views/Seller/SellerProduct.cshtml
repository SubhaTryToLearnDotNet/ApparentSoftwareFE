
@model Apparent.Model.ProductMaster
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="single_seller" style="background-image: url(/Content/Web/Images/banner.png);">
    <div class="container">
        <a href="#"><i class="fa-regular fa-heart"></i> Favourite</a>
    </div>
</section>
<div class="seller_box">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 col-md-4 col-12 mb-0">
                <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star-half-o" aria-hidden="true"></i><br />
                <span class="text-white">(150) 4.5 out of 5</span>
            </div>@{ 
                string image1 = Model.SellerDeatils.Rows[0]["Imagepath"].ToString();
                string serverPath1 = System.Web.Hosting.HostingEnvironment.MapPath("/Content/Seller/Images/" + image1);
                if (!string.IsNullOrEmpty(image1))
                {
                    if (!File.Exists(serverPath1))
                    {
                        image1 = "photo_icon.jpg";
                    }
                }
                else
                {
                    image1 = "photo_icon.jpg";
                }

            <div class="col-lg-4 col-md-4 col-12 mb-0 minus_margin">
                <div class="seller_name">
                    <img src="~/Content/Seller/images/@image1" alt="" />
                </div>
                <h3>@Model.SellerDeatils.Rows[0]["FirstName"].ToString() @Model.SellerDeatils.Rows[0]["LastName"].ToString()</h3>
            </div>
                }
            <div class="col-lg-4 col-md-4 col-12 mb-0">
                <a href="#" class="request_btn white_btn mt-2 align_right">Contact Us</a>
            </div>
        </div>
    </div>
</div>
<section class="software_sec">
    <div class="container">
        <div class="col-lg-12">
            <div class="r_box">
                <h5>Seller information</h5>
                <h4 class="small_font01">About the seller</h4>
                <p class="paragraph para02">
                    @Model.SellerDeatils.Rows[0]["About"].ToString()
                </p>
                <!-- // -->
                <div class="top_ten mt-3">
                    <div id="container">
                        <div class="list" id="one">
                            <!-- <div class="sort_box">
                                <span class="text-white">Sort by:</span>
                                <a href="#" class="sort_btn01">Alphabetical</a>
                                <a href="#" class="sort_btn01">Satisfaction</a>
                                <a href="#" class="sort_btn01">Popularity</a>
                            </div> -->
                            <!-- // -->
                            <h4 class="small_font01">Products</h4>
                            @if (Model.DtProductList != null)
                            {
                                for (int i = 0; i < Model.DtProductList.Rows.Count; i++)
                                {
                                    string image = Model.DtProductList.Rows[i]["ProductIcon"].ToString();
                                    string serverPath= System.Web.Hosting.HostingEnvironment.MapPath("/Content/Web/ProductLogo/" + image);
                                    if (!string.IsNullOrEmpty(image)) {
                                        if (!File.Exists(serverPath))
                                        {
                                            image = "brand04.png";
                                        }
                                    }
                                    else {
                                        image = "brand04.png";
                                    }

                                    <div class="sort_panel_box">

                                        <div class="sort_panel_box_l">
                                            <div class="l_pic">
                                                <a href="/Product/Details?ProductId=@Model.DtProductList.Rows[i]["ProductId"].ToString()"> <img src="/Content/Web/ProductLogo/@image" alt="" /></a>

                                            </div>
                                        </div>
                                        <div class="sort_panel_box_r">
                                            <a href="/Product/Details?ProductId=@Model.DtProductList.Rows[i]["ProductId"].ToString()">
                                                <h6 class="mt_06">@Model.DtProductList.Rows[i]["ProductName"].ToString()</h6></a>
                                                <span>
                                                    <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-regular fa-star-half-stroke"></i> &nbsp;
                                                    <h6 class="small_text01">(1,592) 4.5 out of 5</h6>
                                                </span>
                                                <br />
                                                <h6 class="small_text01">Entry Level Price: <span style="color: #0193d9;">$@Model.DtProductList.Rows[i]["IndividualPrice"].ToString() / month</span></h6>
                                                <p class="paragraph para02">
                                                    @Model.DtProductList.Rows[i]["AboutProduct"].ToString() <a href="#">Show More</a>
                                                </p>
                                                <div class="buy_row">
                                                    <ul>
                                                        <li>
                                                            <div class="form-group">
                                                                <input type="checkbox" id="check23" />
                                                                <label for="check23">Compare</label>
                                                            </div>
                                                        </li>
                                                        <li><a href="javascript:void(0);" class="bg_none"><i class="fa-regular fa-heart"></i> Favourite</a></li>
                                                        <li><a href="#">See Apparent Rating</a></li>
                                                        <li><a href="https://my.apparent.software/">Buy Now</a></li>
                                                    </ul>

                                                </div>
</div>

                                    </div>

                                }
                            }
                            <!-- // -->

                        </div>
                    </div>

                    <!-- // -->
