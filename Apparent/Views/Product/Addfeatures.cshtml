<script>
    var pro_id;
    $(document).ready(function () {
        $("#submitFeatures").click(function () {
            var arr = [];
            var arr2 = [];
            var addfer = [];
            var arr3 = [];



            $.each($("input[name='FeatureGroup1']:checked"), function () {
                arr.push($(this).val());
            });

            $("input[name='grop1']").each(function () {

                addfer.push($(this).val());
            })
            var FeaturesGroup1;
            var Add_featuresg1;

            if (arr.length > 0) {
                FeaturesGroup1 = arr.join("&");
            }
            if (addfer.length > 0) {
                Add_featuresg1 = addfer.join("&")
            }

            /* 2nd features group*/


            var addfer2 = [];
            $.each($("input[name='FeatureGroup2']:checked"), function () {
                arr2.push($(this).val());
            });

            $("input[name='grop2']").each(function () {

                addfer2.push($(this).val());
            })

            var FeaturesGroup2;
            var Add_featuresg2
            if (arr2.length > 0) {
                FeaturesGroup2 = arr2.join("&")
            }
            if (addfer2.length > 0) {
                Add_featuresg2 = addfer2.join("&")
            }


            /* end 2nd features group*/


            /* 3nd features group*/


            var addfer3 = [];
            $.each($("input[name='FeatureGroup3']:checked"), function () {
                arr3.push($(this).val());
            });
            $("input[name='grop3']").each(function () {

                addfer3.push($(this).val());
            })

            var FeaturesGroup3;
            var Add_featuresg3
            if (arr3.length > 0) {
                FeaturesGroup3 = arr3.join("&");
            }
            if (addfer3.length > 0) {
                Add_featuresg3 = addfer3.join("&")
            }


            /*end 3nd features group*/

            var id = $('#ProductId').val();
            var Features_Commentgroup = $('#features_comment').val();


            $.ajax({
                url: "/Product/features",
                type: "POST",
                data: {
                    ProductId: id,
                    FeaturesGroup1: FeaturesGroup1,
                    FeaturesGroup2: FeaturesGroup2,
                    FeaturesGroup3: FeaturesGroup3,
                    Add_featuresg3: Add_featuresg3,
                    Add_featuresg2: Add_featuresg2,
                    Add_featuresg1: Add_featuresg1,
                    Features_Commentgroup: Features_Commentgroup
                },

                cache: false,
                success: function (data) {


                    if (data.respons_result != null && data.respons_result == "Success") {
                        pro_id = data.ProductId;
                       
                        $('#successModal').modal('toggle');
                    }

                }
            });
        });
    });

    function featuresfun() {
        $('#successModal').modal('hide');
        var url = "/Product/Addprice?ProductId=" + pro_id;
        window.location = url;

    }

</script>
